allow-hotplug wlan0
auto wlan0
iface wlan0 inet static
    wpa-ssid "<Wifi SSID>"
    wpa-psk "<Wifi PASSWORD>"
    wpa-key-mgmt WPA-PSK
    wpa-pairwise TKIP CCMP
    wpa-group TKIP CCMP
    wpa-proto WPA RSN
    wpa-ap-scan 1
    wpa-scan-ssid 1
    address 192.168.0.4
    netmask 255.255.255.0
    gateway 192.168.0.1
